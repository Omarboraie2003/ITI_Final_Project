<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="8dp"
    android:id="@+id/card">
<LinearLayout
    android:id="@+id/leanerCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/bn"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Overlay Icon -->
        <ImageView
            android:id="@+id/overlay_iconHeart"
            android:layout_width="29dp"
            android:layout_height="38dp"
            android:layout_gravity="top|start"
            android:contentDescription="TO add product to favourite"
            android:src="@drawable/ic_heart_outline" />
        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/overlay_iconCart"
            android:layout_width="28dp"
            android:layout_height="38dp"
            android:layout_gravity="top|start"
            android:contentDescription="TO add product to cart"
            android:src="@drawable/ic_shopping_cart" />
    </LinearLayout>


    <TextView
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Title"
        android:textColor="@color/black"
        android:fontFamily="@font/metropolis_semi_bold"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$ Price"
        android:textColor="@color/black"
        android:fontFamily="@font/metropolis_semi_bold"
        android:textSize="18sp" />
</LinearLayout>
</androidx.cardview.widget.CardView>
